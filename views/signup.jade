extends layout

block content
  div.jumbotron
    h2 A
      small (nother)
      simple  micro-blog system
    p.lead Sign Up and Write

  section.col-md-6.col-md-offset-3
    form.form-horizontal(action="/signup" method="POST")
      div.form-group
        label.col-sm-2.control-label Pseudo
        div.col-sm-10
          input.form-control(type="text" name="pseudo" placeholder="Enter your Pseudo")
      div.form-group
        label.col-sm-2.control-label Email
        div.col-sm-10
          input.form-control(type="email" name="email" placeholder="Enter your Email")
      div.form-group
        label.col-sm-2.control-label Password
        div.col-sm-10
          input.form-control(type="password" name="password" placeholder="Enter your Password")
      div.col-md-6.col-md-offset-3
        input.form-control(type="submit" value="Sign Up")

  div.clearfix
